<!DOCTYPE html>
<html>
  <head>
    <title>MakeupalleyrevampApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Reem+Kufi" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/latest/css/font-awesome.css" rel="stylesheet">
  </head>

  <header>
  </header>
   <h1 class="hero-title">MakeupAlley</h1>


  <body>
  	<% if notice %>
  	  <p class="alert alert-success"><%= notice %></p>
  	<% end %>
  	<% if alert %>
  	  <p class="alert alert-danger"><%= alert %></p>
  	<% end %>

    <nav class="navbar-default">
      <div class="container">

          <% if user_signed_in? %>
            <div class="dropdown pull-right">
              <a class="navbar-brand" data-toggle="dropdown">Hello <strong><%= current_user.email %></strong></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Edit profile', edit_user_registration_path, class: "navbar-brand" %> </li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-brand" %></li>
              </ul>
            </div>

          <% else %>
          <ul class="nav navbar-nav">
            <li><%= link_to "Sign up", new_user_registration_path, class: "navbar-brand" %></li>
            <li><%= link_to "Login", new_user_session_path, class: "navbar-brand" %></li>
          </ul>  
          <% end %>

    <% if user_signed_in? %>
        <div class="navbar-header .col-md-4">
          <%= link_to "Product Reviews", products_path, class: "navbar-brand" %>
          <%= link_to "Forum", topics_path, class: "navbar-brand" %>
        </div>
      </div>
    </nav>

 <% end %>
 
  <div class="container">
    <%= yield %>
  </div>

  </body>
</html>
